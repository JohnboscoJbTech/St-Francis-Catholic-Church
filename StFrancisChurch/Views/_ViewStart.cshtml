    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"];
    if (controller.Equals("Members"))
    {
        returnLayout = "~/Views/Shared/_AdminBaseLayout.cshtml";
    }
    else if (controller.Equals("Admin"))
    {
        returnLayout = "~/Views/Shared/_AdminBaseLayout.cshtml";
    }
    else if (controller.Equals("Sacrament"))
    {
        returnLayout = "~/Views/Shared/_AdminBaseLayout.cshtml";
    }
    else if (controller.Equals("Account") && Context.Request.Path.Contains("Register"))
    {
        returnLayout = "~/Views/Shared/_AdminBaseLayout.cshtml";
    }
    else if (controller.Equals("Reflection"))
    {
        returnLayout = "~/Views/Shared/_AdminBaseLayout.cshtml";
    }
    else if (controller.Equals("Station"))
    {
        returnLayout = "~/Views/Shared/_AdminBaseLayout.cshtml";
    }
    else if (controller.Equals("Event"))
    {
        returnLayout = "~/Views/Shared/_AdminBaseLayout.cshtml";
    }
    else if (controller.Equals("Society"))
    {
        returnLayout = "~/Views/Shared/_AdminBaseLayout.cshtml";
    }
    else
    {
        returnLayout = "~/Views/Shared/_BaseLayout.cshtml";
    }
    Layout = returnLayout;
}
