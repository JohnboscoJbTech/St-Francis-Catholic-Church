@using StFrancisChurch.Models.Utility
@{
    ViewBag.Title = "Home Page";
    var counts = (SacramentIndex) ViewBag.SacramentCounts;
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Sacraments
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-xl-3 col-sm-6 mb-3">
                <div class="card text-white bg-primary o-hidden h-100">
                    <div class="card-header">
                        Confirmation
                    </div>
                    <div class="card-body">
                        <b style="font-size: 80px">@counts.Confirmation</b>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
                <div class="card text-white bg-warning o-hidden h-100">
                    <div class="card-header">
                        Baptism
                    </div>
                    <div class="card-body">
                        <b style="font-size: 80px">@counts.Baptism</b>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
                <div class="card text-white bg-success o-hidden h-100">
                    <div class="card-header">
                        Matrimony
                    </div>
                    <div class="card-body">
                        <b style="font-size: 80px">@counts.Matrimony</b>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
                <div class="card text-white bg-danger o-hidden h-100">
                    <div class="card-header">
                        Holy Communion
                    </div>
                    <div class="card-body">
                        <b style="font-size: 80px">@counts.Communion</b>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
@section scripts{

    <script>
        $(document).ready(function () {
            
        });        
    </script>
}