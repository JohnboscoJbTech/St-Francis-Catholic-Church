@using StFrancisChurch.Models.Utility
@{
    ViewBag.Title = "Home Page";
    var returns = (ReturnData)ViewBag.returns;
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Communion Register
        <div class="btn-group" style="float: right; margin-top: 5px; margin-right: 10px;">
            <a class="btn btn-success" href="@Href("~/Sacrament/CreateCommunion")" title="Click to create a new communion record"><i class="fa fa-plus" style="margin:0px;"></i> New Record </a>
        </div>
        <div>
            @if (returns.HasValue)
            {
                <b class="text-info">@returns.Message</b>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="membersTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>Surname</th>
                        <th>Othername</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>S/N</th>
                        <th>Surname</th>
                        <th>Othername</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
@section scripts{

    <script>
        $(document).ready(function () {
            $('#membersTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Sacrament/GetCommunionMembers/",
                    type: "POST",
                    dataSrc: "data"
                },
                "columns": [
                    { "data": "Serial" },
                    { "data": "Surname" },
                    { "data": "Othernames" },
                    { "data": "DateReceived" },
                    {
                        "data": "Action",
                        "render": function (data, type, full, meta) {
                            return '<a class="btn btn-primary" title="View this Baptismal Record"><i class="fas fa-fw fa-eye"></i></a>&nbsp;' +
                                '<a class="btn btn-primary" title="Edit this Baptismal Record"><i class="fas fa-fw fa-edit"></i></a>';
                        }
                    }
                ]
            });
        });        
    </script>
}